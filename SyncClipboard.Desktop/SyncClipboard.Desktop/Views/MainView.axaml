<UserControl x:Class="SyncClipboard.Desktop.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SyncClipboard.Core.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:DataType="vm:MainViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <Grid>
        <SplitView x:Name="SplitPane"
                   IsPaneOpen="True"
                   OpenPaneLength="200"
                   DisplayMode="Inline">
            <Grid Margin="0,36,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <ui:BreadcrumbBar ItemsSource="{Binding BreadcrumbList}" ItemClicked="BreadcrumbBar_ItemClicked">
                        <ui:BreadcrumbBar.Resources>
                            <x:Double x:Key="BreadcrumbBarChevronFontSize">16</x:Double>
                            <x:Double x:Key="BreadcrumbBarItemThemeFontSize">30</x:Double>
                            <x:Double x:Key="BreadcrumbBarChevronPadding">0,0,0,0</x:Double>
                        </ui:BreadcrumbBar.Resources>
                        <ui:BreadcrumbBar.ItemTemplate>
                            <DataTemplate x:DataType="vm:PageDefinition">
                                <ui:BreadcrumbBarItem Content="{Binding Title}" />
                                <!--<ui:BreadcrumbBarItem Content="{Binding}">
                                    <ui:BreadcrumbBarItem.ContentTemplate>
                                        <DataTemplate DataType="vm:PageDefinition">
                                            <TextBlock Margin="0,0,0,4" Text="{Binding Title}" />
                                        </DataTemplate>
                                    </ui:BreadcrumbBarItem.ContentTemplate>
                                </ui:BreadcrumbBarItem>-->
                            </DataTemplate>
                        </ui:BreadcrumbBar.ItemTemplate>
                    </ui:BreadcrumbBar>
                </StackPanel>
                <ScrollViewer x:Name="_ScrollViewer"
                              Grid.Row="1"
                              Margin="0,10,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ui:Frame x:Name="SettingContentFrame" Margin="20,0,20,20" />
                </ScrollViewer>
            </Grid>
            <SplitView.Pane>
                <ListBox x:Name="_MenuList"
                         Margin="8,36,0,0"
                         SelectionMode="Single"
                         ItemsSource="{Binding MainWindowPage}"
                         SelectionChanged="ListView_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:PageDefinition">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ui:FontIcon FontSize="16" Glyph="{Binding FontIcon}" FontFamily="Segoe Fluent Icons" />
                                <TextBlock FontSize="16" Text="{Binding Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</UserControl>
