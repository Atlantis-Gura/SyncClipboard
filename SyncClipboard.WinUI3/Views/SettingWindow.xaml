<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="SyncClipboard.WinUI3.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:SyncClipboard.WinUI3.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
        SizeChanged="Window_SizeChanged"
        Title="SyncClipboard"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>-->
        <StackPanel x:Name="TitleBarContainer"
                    Height="36"
                    VerticalAlignment="Top"
                    Canvas.ZIndex="99"
                    Orientation="Horizontal">
            <Button x:Name="ShowNavigeMenuButton"
                    Width="38"
                    Margin="10,2,0,0"
                    Click="ShowNavigeMenuButton_Click"
                    Background="Transparent"
                    BorderThickness="0">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFE7EBF0" />
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
                <AnimatedIcon x:Name="AnimatedIcon">
                    <AnimatedIcon.Source>
                        <animatedvisuals:AnimatedGlobalNavigationButtonVisualSource />
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <FontIconSource FontFamily="Segoe Fluent Icons" Glyph="&#xE700;" />
                    </AnimatedIcon.FallbackIconSource>
                </AnimatedIcon>
            </Button>
            <Border x:Name="AppTitleBar" Padding="0,8,0,8" VerticalAlignment="Top">
                <TextBlock x:Name="AppTitle"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="SyncClipboard" />
            </Border>
        </StackPanel>
        <SplitView x:Name="SplitPane"
                   OpenPaneLength="200"
                   DisplayMode="Inline"
                   PaneClosed="SplitPane_PaneClosed"
                   PaneOpening="SplitPane_PaneOpening"
                   PaneBackground="{ThemeResource LayerOnMicaBaseAltFillColorTransparent}">
            <Grid Margin="0,36,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Margin="20,0,20,8"
                           Text="设置"
                           FontSize="20" />
                <ScrollViewer Grid.Row="1" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">
                    <Frame x:Name="SettingContentFrame" Margin="20,0,20,0" />
                </ScrollViewer>
            </Grid>
            <SplitView.Pane>
                <ListView x:Name="MenuList"
                          Margin="8,36,0,0"
                          SelectionMode="Single"
                          IsItemClickEnabled="False"
                          SelectionChanged="ListView_SelectionChanged">
                    <ListViewItem Content="1" Tag="SyncSettingPage" IsSelected="True" />
                    <ListViewItem Content="2" Tag="NetwordSettingPage" />
                </ListView>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Window>
