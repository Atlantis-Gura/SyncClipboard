<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="SyncClipboard.WinUI3.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:SyncClipboard.WinUI3.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SyncClipboard.Core.ViewModels"
        xmlns:vc="using:SyncClipboard.WinUI3.ValueConverters"
        Title="SyncClipboard"
        SizeChanged="Window_SizeChanged"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.Resources>
            <vc:SettingTagToIcon x:Key="SettingTagToIcon" />
        </Grid.Resources>
        <Grid.DataContext>
            <vm:SettingWindowViewModel />
        </Grid.DataContext>
        <local:AppTitleBar x:Name="_AppTitleBar"
                           Height="36"
                           VerticalAlignment="Top"
                           Canvas.ZIndex="99" />
        <SplitView x:Name="SplitPane"
                   OpenPaneLength="200"
                   DisplayMode="Inline"
                   PaneClosed="SplitPane_PaneClosed"
                   PaneOpening="SplitPane_PaneOpening"
                   PaneBackground="{ThemeResource LayerOnMicaBaseAltFillColorTransparent}">
            <Grid Margin="0,36,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="_SettingTitle"
                           Grid.Row="0"
                           Margin="20,0,20,0"
                           Text="{x:Bind GetItemTag(_MenuList.SelectedItem)}"
                           FontSize="30" />
                <ScrollViewer Grid.Row="1"
                              Margin="0,20,0,0"
                              VerticalScrollMode="Enabled"
                              VerticalScrollBarVisibility="Auto">
                    <Frame x:Name="SettingContentFrame" Margin="20,0,20,20" />
                </ScrollViewer>
            </Grid>
            <SplitView.Pane>
                <ListView x:Name="_MenuList"
                          Margin="8,36,0,0"
                          SelectionMode="Single"
                          IsItemClickEnabled="False"
                          ItemsSource="{Binding SettingItems}"
                          SelectionChanged="ListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ListViewItem Tag="{Binding Name}" >
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon FontSize="16" Glyph="{Binding Name, Converter={StaticResource SettingTagToIcon}}" FontFamily="Segoe Fluent Icons" />
                                    <TextBlock Text="{Binding Tag}" />
                                </StackPanel>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Window>
